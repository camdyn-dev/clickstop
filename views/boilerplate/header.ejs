                        <img id="logo" class="img-responsive" src="/images/logo.png" alt="">

                    </a>
                </div>
            </div>
            <div class="col-md-4 col-xs-12 col-sm-4">
                <!-- Cart -->

                <ul class="top-menu text-right list-inline">
                    <li class="dropdown cart-nav dropdown-slide">
                        <a href="#!" class="dropdown-toggle" data-toggle="dropdown" data-hover="dropdown"><i
                                class="tf-ion-android-cart"></i>Cart</a>
                        <div class="dropdown-menu cart-dropdown">
                            <!-- Cart Item -->
                            <% if(currentUser){%>
                                <%if(user.shoppingCart.length){%>
                                    <% let cartTotal=null%>
                                        <% for (it of user.shoppingCart){%>
                                            <div class="media">
                                                <a class="pull-left" href="#!">
                                                    <img class="media-object" src="<%=it.images[0].path%>"
                                                        alt="image" />
                                                </a>
                                                <div class="media-body">
                                                    <h4 class="media-heading">
                                                        <%=it.name%><a href="#!"></a>
                                                    </h4>
                                                    <h5><strong>$<%=it.price%></strong></h5>
                                                </div>
                                                <form action="/shop/removeFromCart/<%=it.id%>?_method=DELETE"
                                                    method="POST">
                                                    <button class="btn remove"><i class="tf-ion-close"></i></button>
                                                </form>
                                            </div>
                                            <% cartTotal +=it.price%>
                                                <%}%>

                                                    <div class="cart-summary">
                                                        <span>Total</span>
                                                        <span class="total-price">$<%=cartTotal%></span>
                                                    </div>

                                                    <ul class="text-center cart-buttons">
                                                        <li><a href="/shop/cart" class="btn btn-small">View Cart</a>
                                                        </li>
                                                        <li><a href="/shop/cart"
                                                                class="btn btn-small btn-solid-border">Check out</a>
                                                        </li>
                                                    </ul>
                                                    <%}else{%>
                                                        <ul class="text-center">
                                                            <li><a>Empty</a></li>

                                                        </ul>
                                                        <%}%>
                                                            <%}else{%>
                                                                <ul class="text-center">
                                                                    <li><a>Empty</a></li>
                                                                </ul>
                                                                <%}%>
                        </div>

                    </li><!-- / Cart -->

