<% layout("./boilerplate/minBoilerplate.ejs")%>
    <section class="signin-page account">
        <div class="container">
            <div class="row">
                <div class="col-md-6 col-md-offset-3">
                    <div class="block text-center">
                        <a class="logo" href="/shop/main">
                            <img src="images/logo.png" alt="">
                        </a>
                        <h2 class="text-center">Create Your Account</h2>
                        <form class="text-left clearfix" action="/user/register" method="POST">
                            <div class="form-group">
                                <input type="text" class="form-control" placeholder="Enter your name" name="username"
                                    required minlength="3" maxlength="30">
                            </div>
                            <div class="form-group">
                                <input type="email" class="form-control" placeholder="Enter your email" name="email"
                                    required minlength="10">
                            </div>
                            <div class="form-group">
                                <input type="password" class="form-control"
                                    placeholder="Enter a password (at least 10 letters)" name="password" required
                                    minlength="10" maxlength="64">
                            </div>
                            <div class="text-center">
                                <button type="submit" class="btn btn-main text-center">Sign up!</button>
                            </div>
                        </form>
                        <p class="mt-20">Already have an account?<a href="/user/login"> Login</a></p>
                        <!-- <p><a href="forget-password.html"> Forgot your password?</a></p> -->
                    </div>
                </div>
            </div>
        </div>
    </section>